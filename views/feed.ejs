<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% posts.forEach(function(elem){ %>
                <a href="/post/<%= elem._id %>" class="card w-32">
                    <div class="w-full h-40 rounded-xl overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= elem.image %>" alt="">
                    </div>
                    <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                    <h6 class="text-xs font-semibold opacity-500">@<%= elem.user.username %></h6>
                </a>
            <% }) %>
            
        </div>
    </div>

<% include ./partials/footer.ejs %>