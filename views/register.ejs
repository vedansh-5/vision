<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-zinc-100 px-15 py-15 rounded-2xl">
      <!-- Step 1 Form -->
      <div id="step1Form" class="<%= step === 2 ? 'hidden' : '' %>">
        <h1 class="text-3xl text-center font-semibold text-zinc-600 leading-none tracking-tighter capitalize">Create new account</h1>
        <form action="/register/step1" method="POST">
          <label class="inline-block mt-1 text-zinc-800" for="email">Email address</label>
          <input class="border-2 border-zinc-400 rounded-xl block w-full mt-1 mb-2 px-3 py-2" type="email" name="email" placeholder="Email" required>
          <label class="inline-block mt-1 text-zinc-800" for="password">Password</label>
          <input class="border-2 border-zinc-400 rounded-xl block w-full mt-1 mb-2 px-3 py-2" type="password" name="password" placeholder="password" required>
          <label class="inline-block mt-1 text-zinc-800" for="birthdate">Birthdate</label>
          <input class="border-2 border-zinc-400 rounded-xl block w-full mt-1 mb-2 px-3 py-2" type="date" name="birthdate" required>
          <input class="border-2 rounded-4xl block w-full mt-2 mb-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Continue">
        </form>
      </div>

      <!-- Step 2 Form -->
      <div id="step2Form" class="<%= step === 2 ? '' : 'hidden' %>">
        <h1 class="text-3xl text-center font-semibold text-zinc-600 leading-none tracking-tighter capitalize">Complete your profile</h1>
        <form action="/register/step2" method="POST">
          <label class="inline-block mt-1 text-zinc-800" for="fullname">Full Name</label>
          <input class="border-2 border-zinc-400 rounded-xl block w-full mt-1 mb-2 px-3 py-2" type="text" name="fullname" placeholder="Full Name" required>
          <label class="inline-block mt-1 text-zinc-800" for="username">Username</label>
          <input class="border-2 border-zinc-400 rounded-xl block w-full mt-1 mb-2 px-3 py-2" type="text" name="username" placeholder="Username" required>
          <input class="border-2 rounded-4xl block w-full mt-2 mb-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Complete Registration">
        </form>
      </div>

      <p class="text-black text-xl font-semibold text-center mt-2 mx-auto w-full">OR</p>
      <a href="/auth/google" class="flex items-center justify-center gap-2 border-2 border-zinc-400 rounded-full w-full mt-2 mb-2 px-3 py-2 hover:bg-zinc-100">
          <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" class="w-5 h-5" alt="Google">
          <span>Continue with Google</span>
      </a>
      <p class="text-[10px] text-zinc-500 mt-3 w-full mx-auto text-center ">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
      <a class="inline-block mt-4 text-[12px] font-semibold text-zinc-600 text-center w-full" href="/login">Already have an account? Log in.</a>
    </div>
  </div>

<% include ./partials/footer.ejs %>