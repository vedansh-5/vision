<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="POST" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-20">
            <div class="relative">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex justify-center items-center bg-zinc-200">
                    <i class="ri-edit-2-line text-zinc-800"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <!-- for local setup -->
                    <!-- <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt=""> -->
                    <img class="w-full h-full object-cover" src="<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold"><%= user.fullname %></h1>
            <h3 class="text-md">@<%=user.username %></h3>
            <!-- add followers, following later -->
            <div class="prfbtn flex gap-5 mt-5">
                <a href="/edit" class="px-5 py-3 bg-zinc-700 rounded-full text-xs font-semibold">Share</a>
                <a href="/edit" class="px-5 py-3 bg-zinc-700 rounded-full text-xs font-semibold">Edit Profile</a>
            </div>
            
            <a href="/add" class="px-10 py-2 rounded-xlx bg-red-700 text-xs font-semibold mt-7">Add New Post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <div class="card">
                <div class="w-55 h-45 bg-zinc-200 rounded-xl overflow-hidden">
                    <% if (user.posts && user.posts.length > 0) { %>
                        <img class="w-full h-full object-cover" 
                             src="<%= user?.posts[0].image %>" 
                             alt="<%= user.posts[0].title %>"
                             onerror="this.src='/images/placeholder.png'">
                    <% } else { %>
                        <div class="flex items-center justify-center h-full">
                            <p class="text-zinc-400">No posts yet</p>
                        </div>
                    <% } %>
                </div>
                <a href="/show/posts" class="inline-block text-xl font-semibold mt-2">Your Uploaded Pins</a>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts ? user.posts.length : 0 %> pins</h5>
            </div>
        </div>
    </div>

    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        });

        document.querySelector("#uploadform input").addEventListener("change", function () {
            document.querySelector("#uploadform").submit();
        });
    </script>
<% include ./partials/footer.ejs %>