<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create a new post. </h1>
        <hr class="w-1/4 opacity-20 mt-3">
        <% if (locals.error) { %>
            <div class="bg-red-500 text-white p-3 rounded-md mb-4 w-1/3">
                <%= error %>
            </div>
        <% } %>
        <form action="/createpost" method="POST" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2
            " type="file" name="postimage">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md
            " type="text" placeholder="Title" name="title">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md
            " type="text" placeholder="Description" name="description">
            <input class="block w-1/3 px-3 py-2 mt-2 border-2 rounded-md
            " type="text" placeholder="Tags">
            <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md
            " type="submit" value="Create Post" name="" id="">
        </form>
    </div>

<% include ./partials/footer.ejs %>